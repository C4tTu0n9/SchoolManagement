<Window x:Class="Wpf_Student_Management.Pages.Subjects.Add_Subject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Student_Management.Pages.Subjects"
        mc:Ignorable="d"
            Title="Add_Subject" Height="391" Width="426"
    WindowStartupLocation="CenterScreen" Topmost="True">

    <Grid>
        <TextBlock Text="Add Subject" FontSize="30"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="38,24,0,0"/>

        <Label Content="Subject Id" FontSize="16" HorizontalAlignment="Left" Margin="65,95,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtSubjectId" HorizontalAlignment="Left" Margin="181,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" Height="30"/>

        <Label Content="Subject title" FontSize="16" HorizontalAlignment="Left" Margin="67,151,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtSubjectTitle" HorizontalAlignment="Left" Margin="181,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" Height="30"/>


        <Button Content="Add" HorizontalAlignment="Center" Margin="0,282,0,0" VerticalAlignment="Top" Height="65" Width="114" RenderTransformOrigin="0.254,0.099" Click="Button_Click"/>
    </Grid>
</Window>
